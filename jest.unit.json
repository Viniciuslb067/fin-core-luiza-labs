{
  "displayName": "Unit Tests",
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "test/unit",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage/unit",
  "testEnvironment": "node",
  "moduleNameMapping": {
    "^src/(.*)$": "<rootDir>/../../src/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/../setup/unit.setup.ts"]
}
